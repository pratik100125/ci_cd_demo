<%= form_with model: @user, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :profile_picture %>
<%= form.file_field :profile_picture, direct_upload: true %>
  </div>

  <div>
    <%= form.label :documents, "Upload Documents" %>
<%= form.file_field :documents, multiple: true, direct_upload: true %>
  </div>

  <%= form.submit "Save User" %>
<% end %>
